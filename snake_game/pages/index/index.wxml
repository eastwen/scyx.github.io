<view class="container">
  <view class="game-title">神彩游戏</view>
  <view class="score">得分: {{score}}</view>
  <view class="game-area">
    <canvas type="2d" id="snakeCanvas" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></canvas>
  </view>
  <view class="game-controls">
    <button class="pause-btn control-btn" bindtap="togglePause">{{isPaused ? '继续' : '暂停'}}</button>
  </view>
  <view class="controls">
    <button class="control-btn btn-up" bindtap="changeDirection" data-direction="up">上</button>
    <view class="middle-row">
      <button class="control-btn btn-left" bindtap="changeDirection" data-direction="left">左</button>
      <button class="control-btn btn-right" bindtap="changeDirection" data-direction="right">右</button>
    </view>
    <button class="control-btn btn-down" bindtap="changeDirection" data-direction="down">下</button>
  </view>
</view>